= simple_form_for([:admin, @comment]) do |f|
	.form-group
		= f.input :content, input_html: {class: 'form-control comment-content', rows: 5, maxlength: 400}
	.form-actions
		= button_tag(type: 'submit', class: 'btn btn-primary') do
			%i.fa.fa-upload.m-r-xs
			Submit
		= link_to admin_comments_path, class: 'btn btn-danger' do
			%i.fa.fa-times.m-r-xs
			Cancel
