#users.show
  .row
    .col-xs-12.text-right
      = link_to admin_users_path, class: 'btn btn-default' do
        %i.fa.fa-chevron-left.m-r-xs
        Back
      = link_to edit_admin_user_path, class: 'btn btn-warning' do
        %i.fa.fa-pencil.m-r-xs
        Edit
      = link_to admin_user_path(@user), data: {behavior: 'delete'}, class: 'btn btn-danger' do
        %i.fa.fa-trash.m-r-xs
        Delete
  .row
    .col-md-12
      .card
        .card-header{'data-background-color': 'orange'}
          %h4.title User Information
        .card-content
          = render 'info'

  .row
    .col-md-12
      .card
        .card-header{'data-background-color': 'green'}
          %h4.title User Posts
          %p.category= "Post Count: #{@user.posts.count}"
        .card-content.table-responsive
          - if @user.posts.count > 0
            = render 'posts'
          - else
            %p= "No posts found by #{@user.username}."

  .row
    .col-md-12
      .card
        .card-header{'data-background-color': 'purple'}
          %h4.title User Comments
          %p.category= "Comment Count: #{@user.comments.count}"
        .card-content.table-responsive
          - if @user.comments.count > 0
            = render 'comments'
          - else
            %p= "No comments found by #{@user.username}."

  .row
    .col-md-12
      .card
        .card-header{'data-background-color': 'red'}
          %h4.title User Flags
          %p.category= "Flag Count: #{@user.flags.count}"
        .card-content.table-responsive
          - if @user.flags.count > 0
            = render 'flags'
          - else
            %p= "No flagged posts found by #{@user.username}."
