= simple_form_for([:admin, @user], url: admin_user_path(@user.username)) do |f|
  .form-group
    = f.input :email, input_html: {class: 'form-control user-email'}
  .form-group
    = f.input :username, input_html: {class: 'form-control user-username'}
  .checkbox
    = f.input :admin, label: 'Admin?'
  .form-actions
    = button_tag(type: 'submit', class: 'btn btn-primary') do
      %i.fa.fa-upload.m-r-xs
      Submit
    = link_to root_path, class: 'btn btn-danger' do
      %i.fa.fa-times.m-r-xs
      Cancel
