!!! 5
%html
	%head
		%title Corgi Derp
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		%link{rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css"}
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		= csrf_meta_tags

	%body
		- if flash.count > 0
			- flash.each do |type, msg|
				= content_tag :div, msg, class: "alert alert-#{type}"
		%nav.navbar.navbar-default.navbar-static-top
			.container
				.navbar-header
					= link_to root_path, class: 'navbar-brand' do
						Corgi
						%span> Derp
				#main-nav.collapse.navbar-collapse
					%ul.nav.navbar-nav.navbar-right
						- if user_signed_in?
							%li= link_to 'New Post', new_post_path
							%li= link_to 'Account', edit_user_registration_path
							%li= link_to 'Sign Out', destroy_user_session_path, method: :delete
						- else
							%li= link_to 'Sign In', new_user_session_path
							%li= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary'

		= yield
		%footer.footer
			.container
				%p
					&copy; 2016 CorgiDerp. Created by
					= link_to 'Jeff Aschenbrenner', 'http://www.jeffaschenbrenner.com'
