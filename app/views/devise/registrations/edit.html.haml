.container
  %h2 Edit account

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put}) do |f|
    = f.error_notification
    .panel.panel-default
      .panel-body
        .form-inputs
          .row
            .col-md-4
              = f.input :username, required: true, autofocus: true
            .col-md-8
              = f.input :email, required: true

          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %p= "Currently waiting confirmation for: #{resource.unconfirmed_email}"

          = f.input :password, autocomplete: 'off', hint: 'Leave blank if you do not want to change your password.', required: false
          = f.input :password_confirmation, required: false
          = f.input :current_password, hint: 'Your current password is required to save your changes.', required: true

        .form-actions
          = f.button :submit, 'Update'
