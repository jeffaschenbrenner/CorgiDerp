= simple_form_for @post, class: 'post-form' do |f|
	.form-group
		= f.input :title, input_html: {class: 'form-control post-title'}
	.form-group
		= f.input :image, input_html: {class: 'form-control post-img'}
	.form-group
		= f.input :description, input_html: {class: 'form-control post-description', rows: 5, maxlength: 400}
	.form-group
		= f.input :source, input_html: {class: 'form-control post-source'}
	-# = f.button :submit, class: 'btn btn-primary' do
	=button_tag(type: 'submit', class: 'btn btn-primary') do
		%i.fa.fa-upload
		Submit

	= link_to root_path, class: 'btn btn-danger' do
		%i.fa.fa-times
		Cancel
