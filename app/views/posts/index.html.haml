#post.index
	.container-fluid
		- if @posts.count > 1
			%ul.sort-options				
				%li{class: params[:sort].present? && params[:sort] == 'recent' ? 'active' : nil}= link_to 'Recent', posts_path(sort: 'recent')
				%li{class: params[:sort].present? && params[:sort] == 'top' ? 'active' : nil}= link_to 'Top', posts_path(sort: 'top')
		.posts.row
			= render 'posts', posts: @posts, labels: false, cols: 4
= render 'flag_post'
