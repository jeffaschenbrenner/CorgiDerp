.breadcrumbs.hidden-xs
	.container
		%ol.breadcrumb
			%li= link_to 'Home', root_path
			%li= link_to 'Posts', root_path
			%li.active= @post.title
#post.show
	.container
		.row
			.col-xs-12.col-sm-6
				%h2.title= @post.title
				%p
					by
					= @post.user.username
					= time_ago_in_words(@post.created_at)
					ago
				= render 'actions'
			.col-xs-12.col-sm-6.text-right-not-xs
				- if current_user && current_user == @post.user
					= link_to edit_post_path, class: 'btn btn-warning' do
						%i.fa.fa-pencil.m-r-md
						Edit
					= link_to @post, data: {behavior: 'delete'}, class: 'btn btn-danger' do
						%i.fa.fa-times.m-r-md
						Delete
		.row
			.col-md-8
				.thumbnail
					= image_tag(@post.image.url(:large), title: @post.title, class: 'img-responsive')
				%p= @post.description
